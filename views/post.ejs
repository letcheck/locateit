<% include header.ejs %>
<script type="text/javascript"
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD_HVOremtwgY_yjF4CaRiumfJ3QO3XeKk&sensor=false">
</script>
<script type="text/javascript" 
	src="/js/post.js">
</script>
<span id="userid" style="visibility:collapse;"><%= userid %></span>
<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<div class="jumbotron">
				<p>Post a picture or a video and geotag it! Show the world your experience or achievement...</p>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-6">
			<div id="map" style="height:400px;"></div>
		</div>
		<div class="col-lg-5 col-lg-offset-1">
			
			<div class="row">
				<div class="checkbox">
					<label>
	        			<input type="checkbox" checked="checked" id="locatetome"></input>
	        			Locate it on my position
	                </label>
				</div>
			</div>
			<div class="row">
				<div class="input-group">
    				<input class="form-control" type="text" id="address"></input>
    				<span class="input-group-btn">
    					<button class="btn btn-default" type="button" id="gothere">
							Go there
						</button>
    				</span>
    				
				</div>
			</div>
			<div class="row">
				<span class="help-block">
					Search a place with a name ...
				</span>
			</div>
		</div>
	</div>
	
	<div class="row" style="margin-top:20px;">
		<div class="col-lg-12">
			<div class="alert alert-dismissable alert-warning" id="error" >
				<p></p>
			</div>
		</div>
	</div>
	
	<div class="row" >
		<div class="col-lg-12 pagination-centered">
			<div class="well">
				<div class="form-horizontal">
					<fieldset>
						<div class="form-group">
							<label class="col-lg-2 control-label" for="msg">Message</label>
							<div class="col-lg-10">
								<textarea id="msg" class="form-control" rows="6" name="msg"></textarea>
								<span class="help-block">
									Write a message...
								</span>
							</div>
						</div>
						<div class="form-group">
							<label class="col-lg-2 control-label" for="date">Date</label>
							<div class="col-lg-2">
								<input type="date" id="date" class="form-control" placeholder="YYYY-MM-DD" />
							</div>
						</div>
						
						<div class="form-group">
							<label class="col-lg-2 control-label" for="type">Type of media*</label>
							<div class="col-lg-10">
								<div class="radio">
									<label>
										<input type="radio" checked="checked" id="typepicture" name="typemedia" value="picture"></input>
										Picture
									</label>
								</div>
								<div class="radio">
									<label>
										<input type="radio"  id="typevideo" name="typemedia" value="video"></input>
										Video
									</label>
								</div>
							</div>
						</div>
						
						<div id="pictureUp">
						<div class="form-group">
							<label class="col-lg-2 control-label" for="picture">Picture</label>
							<div class="col-lg-10">
								<input type="url" name="urlpicture" id="picture" class="form-control" placeholder="url" value=""/>
							</div>
						</div>
						<div class="form-group">
							<div class="input-group col-lg-10 col-lg-offset-2">
								<div class="row">
									<div class="col-lg-2">
									<form enctype="multipart/form-data" id="formfile" >
									<span class="btn btn-default btn-file">
									    Browse... 
									    
									    <input id="photodl" type="file" name="pictureToUpload" style="visibility:collapsed;"/>
									    
									</span>
									</form>
									</div>
									<div class="col-lg-10">
										<input class="form-control" type="text" readonly="" id="showfile"></input>
									</div>
								</div>
								<div id="progress" class="row" style="margin-top:10px;visibility:collapse;">
									<div class="progress">
									    <div class="progress-bar" id="progress-bar"></div>
									</div>
								</div>
							</div>
						</div>
						</div>
						
						<div class="form-group" id="videoUp" >
							<label class="col-lg-2 control-label" for="video">Video</label>
							<div class="col-lg-10">
								<input type="url" id="video" class="form-control" placeholder="Url of a youtube video"/>
							</div>
						</div>
						<div class="form-group">
							<div class="col-lg-4 col-lg-offset-5">
								<button class="btn btn-primary" type="submit" id="submit">
								    Submit
								</button>
							</div>
						</div>
					</fieldset>
				</div>
			</div>
		</div>
	</div>
	
</div>
<% include footer.ejs %>